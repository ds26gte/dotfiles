pkgdir=~/.local/share/nvim/site/pack/3rdparty/start

mkdir -p $pkgdir

cd $pkgdir

for f in *; do
  if test -d $f; then
    echo ________________________________________
    echo
    echo $f
    cd $f
    git pull
    if test -d doc; then
      cd doc
      nvim -es -c 'helpt .'
      cd ..
    fi
    cd ..
  fi
done
