# last modified 2014-10-21

if test $# -ne 2
then echo need 2 arguments; exit
fi

if test ! -f $1
then echo file $1 not found; exit
fi

sed -e '/^::/, /^$/ s/^/횧tzpLeadingSpacesLine/' \
-e 's/^\(횧tzpLeadingSpacesLine\)::/\1/' \
-e 's/^횧tzpLeadingSpacesLine$//' \
-e 's/^횧tzpLeadingSpacesLine/| /' \
$1 > $2
