# last modified 2014-12-06

if test $# -ne 1
then echo require one argument file; exit
else
  f=$1
  if test ! -f $f
  then echo file $f not found; exit
  fi
fi

g=${f##*/}
g=${g%.*}

pandoc \
  -f markdown-line_blocks-raw_html-subscript-superscript+autolink_bare_uris+pipe_tables \
  -o $g.docx \
  $f
