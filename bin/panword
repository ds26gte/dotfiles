# last modified 2014-11-11

if test $# -ne 1
then echo require one argument file; exit
else
  f=$1
  if test ! -f $f
  then echo file $f not found; exit
  fi
fi

ft=$(mktemp --suffix=.txt)

panpre $f $ft

g=${f##*/}
g=${g%.*}

pandoc \
  -f markdown-raw_html-subscript-superscript+autolink_bare_uris \
  -o $g.docx \
  $ft

rm $ft
