# created 2020-05-12
# Dorai Sitaram

backupDir=$HOME/.local/share/nvim/backup

test -d $backupDir || mkdir -p $backupDir

test $PWD -ef $backupDir && exit

afterPluginDir=$HOME/.config/nvim/after/plugin

test -d $afterPluginDir || mkdir -p $afterPluginDir

patchmodeFile=$afterPluginDir/patchmode.vim

date +"set pm=.%Y-%m-%d-%Hh%M~" > $patchmodeFile

filesToBeBackedUp=.????-??-??-??h??~

filesToBeBackedUp=".*$filesToBeBackedUp *$filesToBeBackedUp"

mv -n $filesToBeBackedUp $backupDir 2>/dev/null

rm -f $filesToBeBackedUp
