# Dorai Sitaram

if test ! "$VIM" -a ! -f "$VIMRUNTIME/debian.vim"; then
  echo Can only be called from tiny Vim
  exit
fi

BDIR=$HOME/.anticlock

if test ! -d $BDIR; then
  mkdir -p $BDIR
  (cd $BDIR; git init)
fi

BEXT=.TINY-VIM

FILES=

for f in .*$BEXT *$BEXT; do
  if test -f "$f"; then
    g=${f%.*}
    FILES="$FILES $g"
    g=$(basename $g)
    mv $f $BDIR/$g
  fi
done

cd $BDIR

git add .

git commit -am "$FILES"

