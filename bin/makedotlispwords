# created 2022-07-03
# last modified 2022-07-03

# create .lispwords from lispwords.vim for use with scmindent

TGTFILE=~/.lispwords

nvim -c "redir! > $TGTFILE" \
  -c 'echo &lw' \
  -c 'redir END' -cq

sed -i \
  -e '/^ *$/d' \
  -e '$s/$/,/' \
  $TGTFILE

sed -i \
  -e 's/,/\n/g' \
  $TGTFILE

sort $TGTFILE -o $TGTFILE

sed -i \
  -e 's/^/(/' \
  -e 's/$/ 0)/' \
  $TGTFILE
