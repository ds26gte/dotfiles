# created 2022-07-04
# last modified 2022-07-05
# Dorai Sitaram

f=$1

basef=${f%.adoc}

asciidoctor -a linkcss $f

pandoc $basef.html -o $basef.md

sed -i \
  -e '/^::: {\.verseblock} *$/,/^``` *$/s/^/| /' \
  -e '/^::: {#footer-text} *$/,/^:::/d' \
  $basef.md

sed -i \
  -e '/^| ::: {\.verseblock}/d' \
  -e '/^| ```/d' \
  -e 's/^``` {\.highlight} *$/```/' \
  -e '/^:::/d' \
  $basef.md
