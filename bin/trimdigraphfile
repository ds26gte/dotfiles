# Last modified 2019-10-23
# Dorai Sitaram

digf=~/.config/nvim/after/plugin/moredig.vim

vi -es << EOF

if !exists(':DigraphNew')
  !vighclone chrisbra/unicode.vim
endif

EOF

echo DigraphNew $* >> $digf

vi -es $digf << EOF

func! TrimDigraphs()
  s/^DigraphNew\s\+\(..\).*/\=printf("digraph %s %s", submatch(1), char2nr(unicode#Digraph(submatch(1))))
endfunc

g/DigraphNew/ call TrimDigraphs()

sort u
w
EOF
