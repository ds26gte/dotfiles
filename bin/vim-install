# last modified 2015-05-04

cd ~/src/vim

./configure \
--disable-gui \
--disable-nls \

#--without-x \
#--with-x \

cd src

if test ! -e feature.h.sav
then cp -p feature.h feature.h.sav
fi

vim-modify-feature

cd ..

make clean
make

cd src

if test -e feature.h.sav
then
cp -p feature.h feature.h.mod
cp -p feature.h.sav feature.h
rm -f feature.h.sav
fi

cd ..

sudo make install
